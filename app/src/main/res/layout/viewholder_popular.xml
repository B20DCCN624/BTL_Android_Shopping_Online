<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="235dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_item1"
            android:layout_width="170dp"
            android:layout_height="155dp"
            android:background="@drawable/grey_background"
            android:src="@drawable/item_1" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="5dp"
            android:indeterminate="false"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="#ffc106"
            android:rating="4.6"
            android:stepSize="0.1"/>

        <TextView
            android:id="@+id/title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:lines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Pink Singet"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="8dp">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/oldPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$123"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/darkGrey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/newPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/oldPrice"
                    android:text="$100"
                    android:textColor="@color/green"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/quantityReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/darkGrey"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/img_review"
                    android:layout_toRightOf="@+id/quantityReview"
                    android:src="@drawable/review"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>